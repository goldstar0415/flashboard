{
  "name": "pages",
  "base": "PersistedModel",
  "strict": false,
  "idInjection": false,
  "label":"Pages",
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "id": {
      "type": "string",
      "id": true,
      "index": true
    },
    "title": {
      "label":"Page Title",
      "type": "text",
      "required": true,
      "defaultColumn":true
    },
    "page_color": {
      "label":"Page Color",
      "type": "color"
    },
    "capacity": {
      "label":"Capacity",
      "type": "slider",
      "options": {
        "min": 0,
        "max": 300
      }
    },
    "type page": {
      "label":"Page Type",
      "type": "select",
      "options": ["first", "second", { "value": "third", "label": "The third one" }]
    },
    "created": {
      "label":"Create Date",
      "type": "date"
    },
    "fullname": {
      "label":"Full Name",
      "type": "name"
    },
    "time": {
      "label":"Create Time",
      "type": "time"
    },
    "number":{
      "type":"Number",
      "label":"Number test"
    },
    "password": {
      "label": "Password",
      "type": "Password"
      },
    "access_public":{
      "label":"Access Public",
      "type": "boolean",
      "default":true,
      "required": true,
      "defaultColumn":true
    },
    "site": {
      "type": "string",
      "required": true
    },
    "transition": {
      "type": "string",
      "default": "default"
    },
    "html": {
      "type": "code",
      "options": {
        "mode": "htmlmixed",
        "lineNumbers": true,
        "extraKeys": {"Ctrl-Space": "autocomplete"}
      }
    },
    "status": {
      "type": "string",
      "default": "1"
    },
    "site_name": {
      "type": "string",
      "defaultColumn":true,
      "label": "Site Name"
    },
    "image": {
      "type": "file",
      "label": "Upload your image",
      "options" : {
        "dest": "/static/",
        "allowedTypes": "jpg|png",
        "multiple":true,
        "maxSize": 50000
      }
    },
    "price": {
      "type":"money",
      "label":"Price"
    },
    "url": {
      "type":"url",
      "label":"Page Url"
    },
    "variant_data": {
      "type": "string",
      "id": false,
      "required": false
    },
    "geo": {
      "label": "Geo Address",
      "type": "location"
    },
    "description": {
      "type": "html",
      "options":{
        "theme": "bubble",
        "placeholder": "输入任何内容，支持html",
        "modules": {
            "toolbar": [
              ["bold"]
            ]
        }
      }
    },
    "slug": {
      "type": "string",
      "defaultColumn":true
    }
  },
  "validations": [],
  "relations": {},
  "acls": [],
  "methods": {}
}
