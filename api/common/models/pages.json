{
  "name": "pages",
  "base": "PersistedModel",
  "strict": false,
  "idInjection": false,
  "options": {
    "validateUpsert": true
  },
  "label": "Pages",
  "properties": {
    "id": {
      "type": "string",
      "id": true,
      "index": true
    },
    "title": {
      "type": "text",
      "required": true,
      "label": "Page Title",
      "defaultColumn": true
    },
    "page_color": {
      "type": "color",
      "label": "Page Color"
    },
    "capacity": {
      "type": "slider",
      "label": "Capacity",
      "options": {
        "min": 0,
        "max": 300
      }
    },
    "type page": {
      "type": "select",
      "label": "Page Type",
      "options": [
        "first",
        "second",
        {
          "value": "third",
          "label": "The third one"
        }
      ]
    },
    "created": {
      "type": "date",
      "label": "Create Date"
    },
    "fullname": {
      "type": "name",
      "label": "Full Name"
    },
    "time": {
      "type": "time",
      "label": "Create Time"
    },
    "number": {
      "type": "Number",
      "label": "Number test"
    },
    "password": {
      "type": "Password",
      "label": "Password"
    },
    "access_public": {
      "type": "boolean",
      "required": true,
      "label": "Access Public",
      "default": true,
      "defaultColumn": true
    },
    "site": {
      "type": "textarea",
      "required": true
    },
    "transition": {
      "type": "string",
      "default": "default"
    },
    "html": {
      "type": "code",
      "options": {
        "mode": "htmlmixed",
        "lineNumbers": true,
        "extraKeys": {
          "Ctrl-Space": "autocomplete"
        }
      }
    },
    "status": {
      "type": "string",
      "default": "1"
    },
    "site_name": {
      "type": "string",
      "defaultColumn": true,
      "label": "Site Name"
    },
    "image": {
      "type": "file",
      "label": "Upload your image",
      "options": {
        "dest": "/static/",
        "allowedTypes": "jpg|png",
        "multiple": true,
        "maxSize": 50000
      }
    },
    "price": {
      "type": "money",
      "label": "Price"
    },
    "url": {
      "type": "url",
      "label": "Page Url"
    },
    "variant_data": {
      "type": "string",
      "id": false,
      "required": false
    },
    "geo": {
      "type": "location",
      "label": "Geo Address"
    },
    "description": {
      "type": "html",
      "options": {
        "theme": "bubble",
        "placeholder": "输入任何内容，支持html",
        "modules": {
          "toolbar": [
            [
              "bold"
            ]
          ]
        }
      }
    },
    "slug": {
      "type": "string",
      "defaultColumn": true
    }
  },
  "validations": [],
  "relations": {},
  "acls": [],
  "methods": {}
}
